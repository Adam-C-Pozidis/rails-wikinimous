<h1>Articles#show</h1>
<p>Find me in app/views/articles/show.html.erb</p>

<h2>
  <%= @article.title %>
  <%= link_to '🚮️', article_path(@article), data: {confirm:"Are you sure?"}, method: :delete %>
  <%= link_to '✏️', article_path(@article) %>
</h2>
<h3><%= @article.content %></h3>

<%= form_for @article do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :content %>:
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
<%= link_to "Back to all articles", articles_path %>
