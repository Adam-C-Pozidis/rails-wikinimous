<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article) %>
    <%= link_to '🚮️', article_path(article), data: {confirm:"Are you sure?"}, method: :delete %>
    <%= link_to '✏️', article_path(article) %>
  </h2>
  <h3><%= article.content %></h3>
<% end %>

<%= form_for @new_article do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :content %>:
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
